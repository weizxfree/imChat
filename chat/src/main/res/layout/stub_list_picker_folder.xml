<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/dim_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000" />

    <ListView
        android:id="@+id/list_folder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp"
        android:background="@android:color/white"
        android:divider="@drawable/list_divider_margin_left_5"
        android:dividerHeight="1px"
        android:listSelector="@drawable/bg_common_preference"
        android:scrollbarSize="3dp"
        android:scrollbarThumbVertical="@drawable/picker_scrollbar_vertical_thumb"
        android:scrollbars="vertical" />
</FrameLayout>

