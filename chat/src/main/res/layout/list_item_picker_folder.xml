<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="73dp"
    android:paddingLeft="5dp"
    android:paddingRight="12dp">

    <ImageView
        android:id="@+id/imageview_floder_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/picker_ic_photo_loading" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toLeftOf="@+id/imageview_floder_select"
        android:layout_toRightOf="@+id/imageview_floder_img"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_floder_name"
            style="@style/CCPFontTitleInList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/picker_all_image"
            android:textColor="#333b4b"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textview_photo_num"
            style="@style/CCPFontTipInList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:gravity="left|center"
            android:text="(0)"
            android:textColor="#78849e"
            android:textSize="17sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageview_floder_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/picker_btn_selected"
        android:visibility="visible" />

</RelativeLayout>