<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:divider="@drawable/linear_divider"
    android:orientation="vertical"
    android:showDividers="beginning|middle|end">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="@string/contacts"
        android:textColor="@color/text_color_btn_already_collect"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/ll_search_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/list_divider_margin_left_13"
        android:orientation="vertical"
        android:showDividers="middle" />

    <RelativeLayout
        android:id="@+id/rl_group_more"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_common_preference"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:paddingRight="13dp">

        <ImageView
            android:id="@+id/imv_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/search_gray" />

        <TextView
            android:id="@+id/tv_see_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/imv_search"
            android:gravity="center"
            android:textColor="@color/text_color_btn_already_collect"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/next" />
    </RelativeLayout>

</LinearLayout>
