<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
        fromXScale：动画在X坐标的初始大小（横向的初始大小）
        fromYScale：动画在Y坐标的初始大小（垂直方法的初始大小）
        toXScale：动画在X坐标的最终大小（横向的最终大小）
        toYScale：动画在Y坐标的最终大小（垂直的最终大小）
        pivotX：动画在X坐标显示的位置（动画在屏幕上横向显示的位置）
        pivotY：动画在Y坐标显示的位置（动画在屏幕上垂直显示的位置）
       -->
    <scale
        android:fromXScale="1.0"
        android:fromYScale="1.0"
        android:toXScale="0.8"
        android:toYScale="0.8"
        android:pivotX="50%"
        android:pivotY="50%"
        android:duration="1000"
        />
</set>