<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="20dp" />
            <solid android:color="@color/default_bg_btn_disabled" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="20dp" />
            <solid android:color="@color/default_bg_btn_pressed" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="20dp" />
            <solid android:color="@color/default_bg_btn_normal" />
        </shape>
    </item>

</selector>